                            //- 
                            //-     .single__control
                            //-         .single__dotted.single__dotted_white


                            .gallery
                                .swiper.gallerySwiper.gallerySwiper-js
                                    .swiper-wrapper
                                        each item in [1,2,3]
                                            .swiper-slide
                                                .gallery__item
                                                    a.gallery__link.img.gallery_js(href="#" data-modal="")
                                                        img(src="../img/examples_"+item+".jpg" loading="lazy")

                                    .gallerySwiperModal__dotted.single__dotted_white

                                // Begin Modal modalGallery
                                .modal.fade.modalGallery( id="")
                                    .modal-dialog
                                        .modal-content
                                            a(href="#" class="modal-close" data-dismiss="modal")
                                            .modal-body
                                                .swiper.gallerySwiperModal.gallerySwiperModal-js
                                                    .swiper-wrapper
                                                        each item in [1,2,3]
                                                            .swiper-slide
                                                                .gallery__item.img
                                                                    img(src="../img/examples_"+item+".jpg" loading="lazy")
                                                .modalGallery__control

                                                    i.icon_arrow_left
                                                    i.icon_arrow_right

                                                .gallerySwiper__dotted.single__dotted_white

                                // End modal modalGallery


                        .examples__content
                            .examples__title
                                span!=item
                            ul.examples__list.list
                                each item in [ {label: 'Категория', text: 'Общестроительные работы'}, {label: 'Вид работ', text: 'Заливка фундамента'}, {label: 'Стоимость', text: '150 000 ₽'} ]
                                    li
                                        .examples__label
                                            span!=item.label 
                                        .examples__text
                                            span!=item.text


    // end examples

    // begin questions
    section#questions.questions.section
        .container_center
            .questions__content.bg
                .questions__title
                    span Остались вопросы?
                .questions__label
                    span Напишите нам и наш менеджер перезвонт вам в течение 24 часов
                .questions__form
                    form.form.form_grid(action="send.php")
                        //- из какой формы на сайте
                        input(type="hidden" name="subject" value="форма в футоре")
                        //- проверка спама
                        input(type="hidden" name="notspam" value="")



                        .form__row
                            .form__label
                                span Ваше ФИО*
                            input(type="text", required placeholder="Напишите ваше ФИО")


                        .form__row
                            .form__label
                                span Введите ваш номер телефона*
                            input(type="text", required placeholder="8 (___) ___ ____")

                        .form__row.form__row_textarea
                            .form__label
                                span Ваш вопрос
                            textarea(type="text", placeholder="Опишите вашу проблему")


                        .form__row.form__row_mt20
                            .button
                                button.btn.btn_callback.btn_bg(type="submit")
                                    span Заказать звонок

                        .form__row.form__row_mt20
                            .form__text
                                span Нажимая на кнопку, вы соглашаетесь с <a href="#">политикой конфиденциальности</a>

