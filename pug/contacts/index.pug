extends ../layout/layout.pug
block variable
    -var path = '../';


block content
    // begin breadcrumbs
    .breadcrumbs.section
        .container_center.container_center_right
            .kama_breadcrumbs
                span
                    a(href="#")
                        span Главная

                span.kb_sep

                span.kb_title Контакты

    // end breadcrumbs

    // begin contacts
    section#contacts.contacts.section
        .container_center
            h1 Контакты
            .contacts__wrap

                .contacts__content

                    .contacts__item

                        .contacts__label
                            span Главный офис

                        .info
                            .info__item
                                .info__icon
                                    i.icon_location
                                .info__label
                                    span Санкт-Петербург,<br> Орендовского д.353,<br> оф. 4

                            .info__item
                                .info__icon
                                    i.icon_clock
                                .info__label
                                    span ПН-ВС, 8:00 - 22:00

                            .info__item
                                .info__icon
                                    i.icon_phone
                                .info__label
                                    span.desktop +7 (812) 345-54-54
                                    a.mobile(href="tel:+7 (812) 345-54-54") +7 (812) 345-54-54

                            .info__item
                                .info__icon
                                    i.icon_mark
                                .info__label
                                    span ИИН: 910<span></span> 234<span></span> 456 124



                    .contacts__item

                        .contacts__label
                            span Мы в соц.сетях

                        .soc
                            .soc__item
                                a.soc__link(href="#")
                                    i.icon_facebook
                            .soc__item
                                a.soc__link(href="#")
                                    i.icon_vk
                            .soc__item
                                a.soc__link(href="#")
                                    i.icon_twiter
                            .soc__item
                                a.soc__link(href="#")
                                    i.icon_instagram

                    .contacts__item
                        .contacts__label
                            span Принимаем к оплате
                        .payment
                            .payment__item
                                .payment__img
                                    img(src="/img/pay_header.svg")
                            .payment__item
                                .payment__img.payment__img_mastercard.img
                                    img(src="/img/mastercard.svg")
                            .payment__item
                                .payment__img
                                    img(src="/img/visa.svg")
                            .payment__item
                                .payment__img
                                    img(src="/img/mir.svg")

                .contacts__map
                    .map
                        .map__content
                            //- <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A086094c54260c871382f6664264e6c9b2028317fd1eb2e5d662c7ad24c56f346&amp;width=500&amp;height=400&amp;lang=ru_RU&amp;scroll=true"></script>
                            <iframe src="https://yandex.ru/map-widget/v1/?um=constructor%3A086094c54260c871382f6664264e6c9b2028317fd1eb2e5d662c7ad24c56f346&amp;source=constructor" width="500" height="400" frameborder="0"></iframe>

    // end contacts


    // begin questions
    section#questions.questions.section
        .container_center
            .questions__content.bg
                .questions__title
                    span Остались вопросы?
                .questions__label
                    span Напишите нам и наш менеджер перезвонт вам в течение 24 часов
                .questions__form
                    form.form.form_grid(action="send.php")
                        //- из какой формы на сайте
                        input(type="hidden" name="subject" value="форма в футоре")
                        //- проверка спама
                        input(type="hidden" name="notspam" value="")



                        .form__row
                            .form__label
                                span Ваше ФИО*
                            input(type="text", required placeholder="Напишите ваше ФИО")


                        .form__row
                            .form__label
                                span Введите ваш номер телефона*
                            input(type="text", required placeholder="8 (___) ___ ____")

                        .form__row.form__row_textarea
                            .form__label
                                span Ваш вопрос
                            textarea(type="text", placeholder="Опишите вашу проблему")


                        .form__row.form__row_mt20
                            .button
                                button.btn.btn_callback.btn_bg(type="submit")
                                    span Заказать звонок

                        .form__row.form__row_mt20
                            .form__text
                                span Нажимая на кнопку, вы соглашаетесь с <a href="#">политикой конфиденциальности</a>

                        //- .form__row.form__row_mb0
                        //-     .form__success
                        //-         span Спасибо за обращение!


    // end questions
